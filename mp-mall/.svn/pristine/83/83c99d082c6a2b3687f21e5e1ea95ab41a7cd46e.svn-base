/* pages/orider/list.wxss */
.goods_list {
  min-height: 100vh;
  background-color: #f2f2f2;
}
.goods_item {
  padding: 20rpx ;
  display: flex;
  margin-top: 20rpx;
  background-color: #fff;
}
.goods_item .goods_image {
  width: 180rpx;
  height: 180rpx;
}
.goods_item .goods_image image {
  width: 100%;
  height: 100%;
}
.item_info {
  flex: 1;
  display: flex;
  margin-left: 20rpx;
  flex-direction: column;
  justify-content: space-around;
}
.goods_desc {
  color: #AAAAAA;
  font-size: 26rpx;
  overflow-y: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
 .goods_tit {
  font-size: 30rpx;
  font-weight: 700;
  font-size: 26rpx;
  overflow-y: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
.in_car {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.num {
  padding: 0 10rpx;
}
.price_now {
  /* padding-left: 20rpx; */
  color: #EF2322;
}
.goods_price .price_old {
  color: #E0E0E0;
  font-size: 26rpx;
  padding-left: 20rpx;
  text-decoration: line-through;
}
.item_info .goods_sales {
  display: flex;
  justify-content: space-between;
}
.item_info .goods_sales .sales_num {
  font-size: 26rpx;
}
.rebate {
  color: #FF0D41;
  font-size: 18rpx;
  padding: 5rpx 10rpx;
  border-radius: 30rpx;
  border: 1rpx solid #FF0D41;
  background-color: rgba(255,13,65,0.06);
}
.goods_price {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.again {
  left: 0;
  bottom: 0;
  width: 100%;
  position: fixed;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.again_btn {
  color: #fff;
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-color: #EF2322;
}