/* pages/remarks/remaks.wxss */
.content {
  padding: 20rpx;
  border-radius: 10rpx;
}
.content textarea {
  width: 100%;
  padding: 20rpx;
  height: 300rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  background-color: #f2f2f2;
}
.quick .quick_tit {
  padding: 20rpx;
}
.quick_list {
  display: flex;
  flex-wrap: wrap;
}
.quick_item {
  margin: 10rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  background-color: #f2f2f2;
}
.remaks_btn {
  left: 50%;
  width: 80%;
  color: #fff;
  height: 80rpx;
  bottom: 80rpx;
  position: absolute;
  text-align: center;
  line-height: 80rpx;
  border-radius: 40rpx;
  transform: translateX(-50%);
  /* background-color: #1AE11A; */
  /* background-color: #FF5F58; */
  /* background: linear-gradient(to right, #5ad563 0%, #36af62 100%); */
  background: linear-gradient(to right, #60b533  0%, #60b732 100%);
}