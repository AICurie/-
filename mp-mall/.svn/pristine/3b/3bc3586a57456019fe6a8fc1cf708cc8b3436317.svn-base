.coupon {
  min-height: 100vh;
  padding: 0 20rpx;
  overflow: hidden;
  background-color: #F1F1F1;
}
.coupon_menu  {
  margin-top: 40rpx;
}
.coupon_menu .menu_tit {
  font-size: 32rpx;
  font-weight: 700;
}
.coupon_menu .line {
  color: #707070;
  font-size: 32rpx;
  padding: 0 20rpx;
}
.coupon_menu .menu_txt {
  color: #5E5D5D;
  font-size: 26rpx;
}
.coupon_tab {
  display: flex;
  padding: 20rpx;
  margin-top: 20rpx;
  align-items: center;
  border-radius: 10rpx;
  background-color: #fff;
  justify-content: space-around;
}
.coupon_tab .tab_item {
  font-size: 30rpx;
  font-weight: 700;
  position: relative;
}
.coupon_tab .tab_item::after {
  left: 50%;
  bottom: -4rpx;
  content: "";
  width: 70rpx;
  height: 6rpx;
  position: absolute;
  border-radius: 6rpx;
  transform: translateX(-50%);
}
.coupon_tab .tab_item.active {
  color: #602313;
}
.coupon_tab .tab_item.active::after {
  background-color: #01C801;
}
.coupon_ls {
  /* padding: 20rpx; */
}
.coupon_item {
  /* position: relative; */
  margin-top: 20rpx;
  height: 172rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.arrow {
  width: 20rpx;
  height: 20rpx;
  transform: rotateZ(-45deg);
  border-right: 1rpx solid #333333;
  border-bottom: 1rpx solid #333333;
}
.item_bg {
  width: 100%;
  height: 100%;
}
.item_bg image {
  width: 100%;
  height: 100%;
}
.item_box {
  width: 100%;
  height: 100%;
  display: flex;
  padding: 0 10rpx 0 0rpx;
  /* position: absolute; */
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;
}
.item_box .item_fl {
  height: 100%;
  display: flex;
  width: 210rpx;
  flex-direction: column;
  justify-content: center;
  background-color: #fff9f7;
}
.item_box.invalid {
  filter: grayscale(1);
}
.item_box .item_fl .num {
  font-size: 50rpx;
  /* color: #F2CC0F; */
  color: #F34039;
  text-align: center;
}
.item_fl text {
  color: #F34039;
}
.item_fl .name {
  /* color: #807B7A; */
  color: #F34039;
  font-size: 28rpx;
  /* padding: 6rpx 12rpx; */
  text-align: center;
  border-radius: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.item_ml {
  flex: 1;
  padding-left: 10rpx;
}
.item_ml .item_tit {
  
  font-weight: 700;
  font-size: 32rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
.item_ml .item_tit text {
  color: #F34039;
  font-size: 32rpx;
}
.item_ml .item_date {
  color: #3B3B3B;
  font-size: 24rpx;
}
.item_fr {
  width: 130rpx;
  color: #fff;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: #EB3F09;
}
.item_fr.active {
  background-color: #f2b50e;
}
.item_img {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.item_img image {
  width: 100%;
  height: 100%;
}