
.auth {
  overflow: hidden;
  padding: 0 20rpx 20rpx;
  min-height: 100vh;
  background-color: #F1F1F1;
}
.user_info {
  padding: 20rpx;
  display: flex;
  margin-top: 20rpx;
  align-items: center;
  border-radius: 10rpx;
  background-color: #fff;
  justify-content: space-between;
}
.user_info .info_fl {
  flex: 1;
  display: flex;
  align-items: center;
}
.user_info .info_fl .avatar {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  border-radius: 50rpx;
}
.user_info .info_fl .avatar image {
  width: 100%;
  height: 100%;
}
.user_info .info_fl .avatar .img {
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 50%;
}
.avatar open-data {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user_info .info_fl .name {
  padding-left: 20rpx;
  font-weight: 700;
  /* margin-top: 40rpx; */
}
.user_info .info_fl .name open-data {
  font-size: 32rpx;
  color: #333;
  font-weight: 700;
}
.user_info .info_fr {
  height: 160rpx;
}
.user_info .info_fr .btn {
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  border: 1rpx solid #1AE11A;
}
.auth_box {
  padding: 0 20rpx 20rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.auth_box .auth_tit {
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.auth_box .auth_tit .tit_item {
  color: #333;
  font-weight: 700;
  position: relative;
  padding: 20rpx 0 8rpx;
}
.auth_box .auth_tit .tit_item::after {
  left: 50%;
  bottom: 0;
  content: "";
  width: 80rpx;
  height: 6rpx;
  border-radius: 6rpx;
  position: absolute;
  transform: translateX(-50%);
}
.auth_box .auth_tit .tit_item.active {
  color: #603813;
}
.auth_box .auth_tit .tit_item.active::after {
  background-color: #60b533;
}
.auth_box .item_box {
  margin-top: 20rpx;
}
.auth_box .auth_item {
  margin-top: 10rpx;
  display: flex;
  height: 80rpx;
  align-items: center;
  padding-bottom: 10rpx;
  justify-content: space-between;
  border-bottom: 1rpx solid #F1F1F1;
}
.auth_box .auth_item .item_label {
  
}
.auth_box .auth_item .item_val {
  /* flex: 1; */
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}
.auth_box .auth_item .item_val image {
  width: 40rpx;
  height: 40rpx;
}
.auth_box .auth_item .item_val .val_box {
  color: #999;
}
.auth_box .auth_item .item_val input {
  text-align: right;
}
.auth_box .area {
  color: #999;
  display: flex;
  margin-top: 20rpx;
  min-height: 120rpx;
  border-bottom: 1rpx solid #F1F1F1;
}
.auth_box .area .val {
  flex: 1;
  padding-left: 40rpx;
}
.auth_box .area .val textarea {
  width: 100%;
}
.auth_box .area_tip {
  color: #999;
  padding-top: 20rpx;
}
.auth_box .area textarea {
  height: 120rpx;
}
.auth_img {
  margin-top: 20rpx;
}

.img_label text,
.item_label text,
.label text {
  color: #f54327;
}
.auth_img .img_val {
  display: flex;
  margin-top: 10rpx;
}
.auth_img .img_val .val_box {
  width: 280rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  border: 1rpx dashed #ddd;
  justify-content: center;
}
.auth_img .img_val .val_img {
  width: 280rpx;
  height: 200rpx;
}
.auth_img .img_val .val_img image {
  width: 100%;
  height: 100%;
}
.auth_img .img_val .val_box image {
  width: 60rpx;
  height: 60rpx;
}
.auth_btn {
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}
.auth_btn .btn {
  width: 320rpx;
  /* height: 72rpx; */
  color: #fff;
  margin: 0 auto;
  text-align: center;
  /* line-height: 72rpx; */
  border-radius: 10rpx;
  /* background-color: #01C801; */
   /* background: linear-gradient(to right, #60b533  0%, #60b732 100%); */
   background: linear-gradient(to right, #60b533  0%, #60b732 100%);
}
.auth_btn .btn.dis {
  opacity: 0;
}