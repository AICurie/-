.comment {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #F1F1F1;
}
.comment .comment_tab {
  display: flex;
}
.comment .comment_tab .tab_item {
  width: 160rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  margin-right: 40rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.comment .comment_tab .tab_item.active {
  color: #fff;
  /* background-color: #1AE11A; */
  /* background: linear-gradient(to right, #5ad563 0%, #36af62 100%); */
  background: linear-gradient(to right, #60b533  0%, #60b732 100%);
}
.comment .comment_box .comment_item {
  padding: 20rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.comment .comment_box .comment_item .user_info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.comment .comment_box .comment_item .user_info .info_fl {
  display: flex;
  align-items: center;
}
.comment .comment_box .comment_item .user_info .info_fl .avatar {
  width: 76rpx;
  height: 76rpx;
}
.comment .comment_box .comment_item .user_info .info_fl .avatar image {
  width: 100%;
  height: 100%;
}
.comment .comment_box .comment_item .user_info .info_fl .name {
  padding-left: 20rpx;
}
.comment .comment_box .comment_item .user_info .info_fr {
  color: #7B7272;
}
.comment .comment_box .comment_item .goods_info {
  margin-top: 20rpx;
  color: #999;
  font-size: 26rpx;
}
.comment .comment_box .comment_item .comment_txt {
  font-size: 32rpx;
  margin-top: 20rpx;
}
.comment .comment_box .comment_item .comment_imgs {
  display: flex;
  flex-wrap: wrap;
}
.comment .comment_box .comment_item .comment_imgs .img {
  width: 172rpx;
  height: 172rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.comment .comment_box .comment_item .comment_imgs .img image {
  width: 100%;
  height: 100%;
}