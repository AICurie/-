/* pages/address/add.wxss */
.add {
  padding: 0 20rpx;
}
.add_item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}
.item_fl {
  color: #9B9B9B;
  width: 140rpx;
}
.item_fr {
  flex: 1;
  padding-left: 20rpx;
}
.item_fr > input {
  width: 100%;
}
.name_ipt {
  padding: 40rpx 0;
}
.user_sex {
  display: flex;
  padding: 40rpx 0;
  padding-left: 160rpx;
}
.sex_item {
  color: #9B9B9B;
  padding: 10rpx 30rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
  background-color: #F5F5F5;
}
.sex_item.active {
  color: #fff;
  /* background-color: #EF2322; */
  /* background-color: #1AE11A; */
  background: linear-gradient(to right, #60b533 0%, #60b732 100%);
}
.arrow {
  width: 20rpx;
  height: 20rpx;
  transform: rotateZ(-45deg);
  border-right: 1rpx solid #333333;
  border-bottom: 1rpx solid #333333;
}
.user_name.add_item {
  padding: 0;
}
.user_name.add_item .item_fl {
  padding: 40rpx 0;
}
.user_city.add_item {
  align-items: center;
  padding-right: 10rpx;
}
.user_tag.add_item {
  border-bottom: none;
}
.user_tag.add_item .item_fr {
  padding-left: 10rpx;
}
.tag_list {
  display: flex;
  flex-wrap: wrap;
}
.tag_item {
  color: #9B9B9B;
  margin: 0 10rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  background-color: #F5F5F5;
}
.tag_item.active {
  color: #fff;
 /* background-color: #EF2322; */
 /* background-color: #1AE11A; */
 /* background: linear-gradient(to right, #5ad563 0%, #36af62 100%); */
 background: linear-gradient(to right, #60b533  0%, #60b732 100%);
}
.add_tag {
  padding: 10rpx 0;
}
.tag_btn {
  display: inline-block;
  padding: 10rpx 30rpx;
  border-radius: 40rpx;
  border: 1rpx solid #CCCCCC;
}
.add_btn {
  left: 50%;
  color: #fff;
  width: 80%;
  bottom: 100rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  margin: 40rpx auto 0;
  position: fixed;
  transform: translateX(-50%);
  /* background-color: #EF2322; */
  /* background-color: #1AE11A; */
  background: linear-gradient(to right, #60b533 0%, #60b732 100%);
}
