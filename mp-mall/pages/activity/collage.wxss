.goods_info {
  flex: 1;
  display: flex;
  min-height: 170rpx;
  padding: 20rpx 10rpx;
  overflow: hidden;
  flex-direction: column;
  border-radius: 0 0 10rpx 10rpx;
  background-color: #fff;
  justify-content: space-around;
}
.goods_info .goods_tit {
  display: flex;
  margin: 10rpx 0;
  align-items: center;
}
.goods_info .unprice {
  margin: 20rpx 0;
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}
.goods_info .goods_tit .goods_tab {
  font-size: 30rpx;
  color: #fff;
  font-weight: 700;
  padding: 5rpx 12rpx;
  border-radius: 10rpx;
  background: linear-gradient(to right, #60b533  0%, #60b732 100%);
}
.goods_info .goods_tit .txt {
  flex: 1;
  font-size: 30rpx;
  margin-left: 10rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}


.goods_info .goods_nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.goods_info .goods_nav .nav_fl {
  display: flex;
  align-items: flex-end;
}
.goods_info .goods_nav .sale {
  color: #999999;
  font-size: 20rpx;
  margin-left: 20rpx;
}
.goods_info .price {
  font-weight: 700;
  padding: 10rpx 0;
  font-size: 32rpx;
  display: flex;
  align-items: flex-end;
}
.goods_info .price .util {
  font-size: 22rpx;
  color: #EF2322;
}
.goods_info .price .num {
  font-size: 38rpx;
  color: #EF2322;
  font-weight: 700;
  height: 42rpx;
}
.goods_info .price .l {
  font-size: 22rpx;
  color: #333;
  font-weight: normal;
}
.goods_info .old_price {
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
}
.btn_txt {
  color: #fff;
  border-radius: 45rpx;
  padding: 12rpx 20rpx;
  background-color: #EF2322;
}
.goods_info .goods_nav .btn {
    width: 60rpx;
    height: 60rpx;
}
.goods_info .goods_nav .btn image {
  width: 100%;
  height: 100%;
}

.goods_info .goods_list.tow {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  background-color: #f5f5f5;
}
.goods_btn {
  font-size: 26rpx;
  position: relative;
  border-radius: 40rpx;
  padding: 10rpx 20rpx;
  background-color: #d81e06;
}
.goods_sales .btn {
  width: 60rpx;
  height: 60rpx;
}
.goods_sales .btn image {
width: 100%;
height: 100%;
}
.goods_btn view {
  color: #fff;
}
.goods_btn .spot {
  top: 5px;
  right: 5px;
  width: 10rpx;
  height: 10rpx;
  position: absolute;
  border-radius: 50%;
  background-color: #d81e06;
}
.goods_num {
  padding: 0 20rpx;
}
.goods_info .goods_price {
  display: flex;
  padding: 10rpx 0;
  align-items: center;
  justify-content: space-between;
}
.goods_info .goods_price .price_box {
  display: flex;
  align-items: flex-end;
}
.price_box text {
 margin-right: 10rpx;
}
.price_box .price {
  color: #999;
  font-size: 20rpx;
  margin-left: 10rpx;
}
.goods_price .price_now {
  display: flex;
  align-items: flex-end;
}
.goods_price .price_now .util {
  color: #FF0000;
  font-size: 20rpx;
}
.goods_price .price_now .num {
  color: #FF0000;
  font-size: 32rpx;
  height: 40rpx;
  font-weight: 700;
}
.goods_price .price_old {
  color: #E0E0E0;
  font-size: 26rpx;
  text-decoration: line-through;
}
.goods_info .goods_sales {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}
.goods_info .goods_sales .sales_num  {
  display: flex;
  margin-bottom: 10rpx;
}
.goods_info .goods_sales .sales_num .old {
  font-size: 20rpx;
  color: #333;
  text-decoration: line-through;
}
.goods_info .goods_sales .sales_num .now {
  font-size: 20rpx;
  color: #333;
  margin-left: 10rpx;
}
.goods_info .goods_sales .sales_num .sales_txt {
  font-size: 20rpx;
  color: #999;
  margin-left: 10rpx;
}
.goods_info .amount {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.goods_info .amount .amount_fl {
  display: flex;
}
.goods_info .amount .amount_item {
  padding: 10rpx 16rpx;
  border-radius: 10rpx;
  text-align: center;
  background-color: #eee;
}
.goods_info .amount .amount_item .amount_txt {
  font-size: 24rpx;
}
.goods_info .amount .amount_item .amount_tit {
  color: #999;
  font-size: 24rpx;
}
.goods_info .amount .amount_ls {
  display: flex;
  margin-left: 10rpx;
  border-radius: 10rpx;
  background-color: #eee;
}
.goods_info .amount .amount_ls .amount_item {
  border-right: 1rpx solid #ddd;
}
.goods_info .amount .amount_ls .amount_item:last-child {
  border-right: none;
}
.goods_info .amount .btn {
  width: 50rpx;
  height: 50rpx;
}
.goods_info .amount .btn image {
  width: 100%;
  height: 100%;
}